<%= form_with(model: payment_instrument, local: true) do |form| %>
  <% if payment_instrument.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment_instrument.errors.count, "error") %> prohibited this payment_instrument from being saved:</h2>

      <ul>
        <% payment_instrument.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, ["CreditCard"] %>
  </div>

  <div class="field">
    <%= form.label :credit_card_number %>
    <%= form.text_field :credit_card_number, value: @valid_credit_card_number %>
  </div>

  <div class="field">
    <%= form.label :customer_id %>
    <%= form.select :customer_id, [@customer_id] %>
    <% if false %>
    <%= form.select :customer_id, @customers.map { |obj| obj["id"] } %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
